<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alvarobasedatosfutbol.myapplication.Consultas.Plantilla.Consulta_Plantilla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.91"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.8"
                android:gravity="right"
                android:text="Plantilla:"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinner_plantilla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:clipChildren="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.96"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.025"
                android:width="60dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Dorsal"
                android:textAlignment="textStart"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="190dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text=" Nombre"
                android:textAlignment="textStart"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.025"
                android:width="75dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Partidos"
                android:textAlignment="gravity"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:width="50dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Goles"
                android:textAlignment="gravity"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.025"
                android:width="65dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Asisten."
                android:textAlignment="gravity"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.025"
                android:width="80dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Amarillas"
                android:textAlignment="gravity"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.025"
                android:width="50dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Rojas"
                android:textAlignment="gravity"
                android:textColor="#FF171717"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="0.25"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lista_jugadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
