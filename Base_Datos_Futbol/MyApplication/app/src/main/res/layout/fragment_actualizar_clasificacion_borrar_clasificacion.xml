 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.alvarobasedatosfutbol.myapplication.Modificar.Clasificacion.Modificar_Clasificacion">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="0.95"
             android:orientation="horizontal">

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="0.70"
                 android:gravity="center|right"
                 android:padding="10dp"
                 android:text="Equipo:"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:textColor="#000000" />

             <Spinner
                 android:id="@+id/spinner_actualizar_clasificacion_borrar_seleccion_equipo"
                 style="@android:style/Widget.Holo.Light.Spinner"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_weight="0.3"
                 android:clickable="true"
                 android:transitionGroup="false" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="0.1"
             android:orientation="horizontal">

             <android.support.v7.widget.RecyclerView
                 android:id="@+id/actualizar_clasificacion_borrar_recyclerView"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />

         </LinearLayout>

     </LinearLayout>

 </FrameLayout>