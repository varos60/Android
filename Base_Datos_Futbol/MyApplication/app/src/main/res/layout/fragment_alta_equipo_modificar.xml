<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alvarobasedatosfutbol.myapplication.Alta.Equipo.Alta_Equipo">

                <LinearLayout
                    android:id="@+id/Registrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:text="Modificar Equipo"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center|right"
                            android:padding="10dp"
                            android:text="Equipo:"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000" />

                        <Spinner
                            android:id="@+id/spinner_seleccion_equipo"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="20dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:transitionGroup="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.72"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="10dp"
                            android:text="Nombre:"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/nombre_eq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="text|textNoSuggestions" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:elevation="0dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:padding="10dp"
                            android:text="Tipo:"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000" />

                        <RadioGroup
                            android:id="@+id/radio_group_tipo"
                            style="@android:style/Widget.Holo.CompoundButton.RadioButton"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_sala"
                                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:padding="5dp"
                                android:text="Fut. Sala" />

                            <RadioButton
                                android:id="@+id/radio_portero"
                                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Fut.11" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.86"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/modificar_eq"
                            android:layout_width="181dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="Modificar"
                            android:textColor="#000000" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
