<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:fontFamily="@font/yellowtail"
            android:gravity="center"
            android:text="HAPPY DATE"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/couple_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:src="@drawable/couple" />

        <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="0.15"
            android:background="@drawable/selector_buttons_red"
            android:fontFamily="sans-serif-black"
            android:text="Jugar"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="0.15"
            android:background="@drawable/selector_buttons_white"
            android:fontFamily="sans-serif-black"
            android:text="CONFIGURACION"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="0.15"
            android:background="@drawable/selector_buttons_white"
            android:fontFamily="sans-serif-black"
            android:text="SALIR"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>