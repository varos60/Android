<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.Play.PlaySelectCategories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/desc_categorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Elige las Categorias"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_categories_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.999"
            android:background="@drawable/myback_blue">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/play_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="0.001"
            android:background="@drawable/selector_buttons_red"
            android:fontFamily="sans-serif-black"
            android:text="JUGAR"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>